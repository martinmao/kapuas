<?xml version="1.0" encoding="UTF-8"?>

<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.6.xsd">

    <persistence directory="${java.io.tmpdir}/ehcache"></persistence>


    <cache alias="shiro-activeSessionCache">
        <!--has level-2 cache(remote cache)-->
        <expiry>
            <ttl unit="seconds">30</ttl>
        </expiry>
        <heap unit="MB">20</heap>

        <!--has local cache only-->
        <!--<expiry>-->
            <!--<ttl unit="hours">2</ttl>-->
        <!--</expiry>-->
        <!--<resources>-->
            <!--<heap unit="entries">1000</heap>-->
        <!--</resources>-->
    </cache>

    <cache alias="org.scleropages.maldini.security.provider.shiro.realm.DefaultTokenRealm.authenticationCache"
           uses-template="heap-cache">
    </cache>

    <cache alias="org.scleropages.maldini.security.provider.shiro.realm.DefaultTokenRealm.authorizationCache"
           uses-template="heap-cache">
    </cache>

    <cache alias="org.scleropages.maldini.security.provider.shiro.realm.jwt.JwtTokenRealm.authenticationCache.1"
           uses-template="heap-cache">
    </cache>
    <cache alias="org.scleropages.maldini.security.provider.shiro.realm.jwt.JwtTokenRealm.authorizationCache.1"
           uses-template="heap-cache">
    </cache>

    <cache alias="org.scleropages.maldini.security.acl.Permission">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <heap unit="MB">1</heap>
    </cache>

    <cache alias="org.scleropages.maldini.security.acl.AclEntry">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <heap unit="MB">20</heap>
    </cache>


    <cache-template name="heap-cache">
        <expiry>
            <ttl unit="hours">2</ttl>
        </expiry>
        <resources>
            <heap unit="MB">20</heap>
        </resources>
    </cache-template>

    <cache-template name="offheap-cache">
        <expiry>
            <ttl unit="hours">2</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">50</offheap>
        </resources>
    </cache-template>

    <cache-template name="persistent-cache">
        <expiry>
            <ttl unit="hours">2</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">50</offheap>
            <disk persistent="true" unit="MB">500</disk>
        </resources>
    </cache-template>
</config>